<UserControl x:Class="gentech_services.Views.UserControls.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gentech_services.Views.UserControls"
             mc:Ignorable="d" 
             x:Name="root">
    <Border x:Name="BorderContainer"
        Padding="0,"
        Background="{Binding Background, ElementName=root}"
        MouseLeftButtonUp="BorderContainer_MouseLeftButtonUp">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Image Source="{Binding Icon, ElementName=root}" Width="16" Height="16" Margin="0,0,10,0"/>
            <TextBlock 
            Text="{Binding Text, ElementName=root}"
            Foreground="{Binding Foreground, ElementName=root}"/>
        </StackPanel>
    </Border>
</UserControl>
