<UserControl x:Class="gentech_services.Views.UserControls.ViewOrderModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:gentech_services.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelText">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ValueText">
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>
    </UserControl.Resources>

    <!-- Modal Overlay -->
    <Grid x:Name="ModalOverlay" Background="#80000000" Visibility="Collapsed">
        <Border Background="White"
                CornerRadius="8"
                MaxWidth="750"
                MaxHeight="500"
                Margin="40"
                Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="View Order" FontSize="20" FontWeight="SemiBold" Margin="0,0,12,0"/>
                        <TextBlock x:Name="OrderIdText" Text="#S001" FontSize="20" FontWeight="SemiBold"/>

                        <Border x:Name="StatusBadge" Background="#FFE5E5" CornerRadius="12" Padding="12,4" Margin="40,0,0,0">
                            <TextBlock x:Name="StatusText" Text="Ongoing" FontSize="12" Foreground="#FF4444"/>
                        </Border>

                        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                                CornerRadius="12" Padding="12,4" Margin="20,0,0,0">
                            <TextBlock x:Name="CreatedDateText" Text="Created: 02/11/2025"
                                       FontSize="12" Foreground="#888888"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <Button Content="✕"
                            FontSize="18"
                            Width="32"
                            Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Customer and Service Details Row -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!-- Customer Section -->
                            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1"
                                    CornerRadius="4" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="Customer" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="28"/>
                                            <RowDefinition Height="28"/>
                                            <RowDefinition Height="28"/>
                                            <RowDefinition Height="28"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Name" Style="{StaticResource LabelText}"/>
                                        <TextBlock x:Name="CustomerNameText" Grid.Column="1" Text="Keith Justin Soriano" Style="{StaticResource ValueText}"/>

                                        <TextBlock Text="Email" Grid.Row="1" Style="{StaticResource LabelText}"/>
                                        <TextBlock x:Name="CustomerEmailText" Grid.Row="1" Grid.Column="1" Text="soriano@gmail.com" Style="{StaticResource ValueText}"/>

                                        <TextBlock Text="Contact No." Grid.Row="2" Style="{StaticResource LabelText}"/>
                                        <TextBlock x:Name="CustomerPhoneText" Grid.Row="2" Grid.Column="1" Text="0939-654-2275" Style="{StaticResource ValueText}"/>

                                        <!-- Empty row to match Service Details height -->
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Service Details Section -->
                            <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1"
                                    CornerRadius="4" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="Service Details" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="28"/>
                                            <RowDefinition Height="28"/>
                                            <RowDefinition Height="28"/>
                                            <RowDefinition Height="28"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Service Type" Style="{StaticResource LabelText}"/>
                                        <TextBlock x:Name="ServiceTypeText" Grid.Column="1" Text="Motherboard Repair" Style="{StaticResource ValueText}"/>

                                        <TextBlock Text="Device" Grid.Row="1" Style="{StaticResource LabelText}"/>
                                        <TextBlock x:Name="DeviceText" Grid.Row="1" Grid.Column="1" Text="Motherboard" Style="{StaticResource ValueText}"/>

                                        <TextBlock Text="Technician" Grid.Row="2" Style="{StaticResource LabelText}"/>
                                        <TextBlock x:Name="TechnicianText" Grid.Row="2" Grid.Column="1" Text="M. Soriano" Style="{StaticResource ValueText}"/>

                                        <TextBlock Text="Cost" Grid.Row="3" Style="{StaticResource LabelText}"/>
                                        <TextBlock x:Name="CostText" Grid.Row="3" Grid.Column="1" Text="₱ 5,999" Style="{StaticResource ValueText}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <!-- Description Section -->
                            <Border BorderBrush="#E0E0E0" BorderThickness="1"
                                CornerRadius="4" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="Description" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                                    <TextBlock x:Name="DescriptionText"
                                           Text="Got this motherboard for my gaming PC and it's great. Easy to install, works perfectly with my Ryzen 7, and has plenty of ports. Love the extra M.2 slots and the RGB looks awesome. Solid and reliable so far."
                                           TextWrapping="Wrap"
                                           FontSize="14"
                                           Foreground="#444444"
                                           LineHeight="20"/>
                                </StackPanel>
                            </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
