<UserControl x:Class="gentech_services.Views.UserControls.ViewOrderModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:gentech_services.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelText">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ValueText">
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>
    </UserControl.Resources>

    <!-- Modal Overlay -->
    <Grid x:Name="ModalOverlay" Background="#80000000" Visibility="Collapsed">
        <Border Background="White"
                CornerRadius="8"
                MaxWidth="550"
                MaxHeight="500"
                Margin="40"
                Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- First Row: View Order + Order ID + Close Button -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="View Order    " FontSize="20" FontWeight="SemiBold"/>
                            <TextBlock x:Name="OrderIdText" Text="#S001" FontSize="20" FontWeight="SemiBold"/>
                        </StackPanel>

                        <Button Content="✕"
                                FontSize="18"
                                Width="32"
                                Height="32"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="CloseButton_Click"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F0F0F0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                    <!-- Second Row: Service Details + Created Date + Status -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Service Details" FontSize="14" Margin="0,0,16,0" VerticalAlignment="Center"/>

                        <Border Background="White" BorderBrush="Black" BorderThickness="1"
                                CornerRadius="12" Padding="12,4" Margin="0,0,16,0">
                            <TextBlock x:Name="CreatedDateText" Text="Created: 02/11/2025"
                                       FontSize="12" Foreground="#000000"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <Border x:Name="StatusBadge" Background="#FFE5E5" CornerRadius="12" Padding="12,4">
                            <TextBlock x:Name="StatusText" Text="Ongoing" FontSize="12" Foreground="#FF4444" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Content -->
                <ScrollViewer Grid.Row="1"
                              Style="{StaticResource CustomScrollViewer}"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Customer Section -->
                        <Border BorderBrush="Black" BorderThickness="1"
                                CornerRadius="4" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Customer" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Name" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="CustomerNameText" Grid.Column="1" Text="Keith Justin Soriano"
                                               Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Text="Email" Grid.Row="1" Style="{StaticResource LabelText}" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="CustomerEmailText" Grid.Row="1" Grid.Column="1" Text="soriano@gmail.com"
                                               Style="{StaticResource ValueText}" Margin="0,0,0,8"/>

                                    <TextBlock Text="Contact No." Grid.Row="2" Style="{StaticResource LabelText}"/>
                                    <TextBlock x:Name="CustomerPhoneText" Grid.Row="2" Grid.Column="1" Text="0939-654-2275"
                                               Style="{StaticResource ValueText}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Service Orders and Technician Section -->
                        <Border BorderBrush="Black" BorderThickness="1"
                                CornerRadius="4" Padding="16" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Service Orders Section -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Service Orders" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                                    <StackPanel x:Name="ServiceOrdersList">
                                        <!-- Services with status badges will be added here dynamically -->
                                    </StackPanel>
                                </StackPanel>

                                <!-- Technician and Cost Section -->
                                <StackPanel Grid.Column="2" Width="200">
                                    <TextBlock Text="Technician" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                                    <TextBlock x:Name="TechnicianText" Text="Soriano M." FontSize="13" Margin="0,0,0,16"/>

                                    <TextBlock Text="Service Total Cost" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="CostText" Text="₱ 5,999" FontSize="16" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Device Issue/Description Section -->
                        <Border BorderBrush="Black" BorderThickness="1"
                                CornerRadius="4" Padding="16">
                            <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                  Direction="270"
                                                  ShadowDepth="2"
                                                  BlurRadius="8"
                                                  Opacity="0.15"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Device Issue/Description" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                                <TextBlock x:Name="DescriptionText"
                                           Text="Lenovo Legion - Black - Cracked Screen"
                                           TextWrapping="Wrap"
                                           FontSize="13"
                                           Foreground="#444444"
                                           LineHeight="20"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
