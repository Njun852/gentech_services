<UserControl x:Class="gentech_services.Views.UserControls.EditOrderModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gentech_services.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="850"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BlueAccent" Color="#0000FF"/>
        <SolidColorBrush x:Key="OngoingColor" Color="#FFB800"/>
        <SolidColorBrush x:Key="CompletedColor" Color="#00C040"/>
        <SolidColorBrush x:Key="CancelColor" Color="#FF0000"/>
        <SolidColorBrush x:Key="HeaderBackground" Color="#F2F2F2"/>

        <!-- Modal Shadow Effect -->
        <DropShadowEffect x:Key="ModalShadowEffect"
                          Color="Black"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Direction="270"
                          Opacity="0.15"/>

        <!-- Description TextBox Shadow -->
        <DropShadowEffect x:Key="DescriptionShadow"
                          Color="#00000014"
                          BlurRadius="3"
                          ShadowDepth="1"
                          Direction="270"
                          Opacity="1"/>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,12,12,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hide GridViewColumnHeader separator -->
        <Style x:Key="GridViewColumnHeaderGripper" TargetType="Thumb">
            <Setter Property="Width" Value="0"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>

        <Style TargetType="{x:Type ListViewItem}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,10,12,10"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    CornerRadius="5"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
            </Border>
        </ControlTemplate>

    </UserControl.Resources>

    <Grid x:Name="ModalOverlay"
          Background="#80000000"
          Visibility="Collapsed"
          d:Visibility="Visible"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <Border Background="White"
                CornerRadius="10"
                MaxWidth="850"
                MaxHeight="650"
                Margin="40"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource ModalShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with Close Button -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Edit Services " FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock x:Name="OrderIdText" Text="#S001" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button Content="✕"
                            FontSize="18"
                            Width="32" Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="CloseButton_Click"
                            Cursor="Hand"/>
                </Grid>

                <!-- Services in this Order Title -->
                <TextBlock Grid.Row="1"
                           Text="Services in this Order"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <!-- Add Service and Assign Technician Controls -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
                    <Button Content="Add Service"
                            Background="{StaticResource BlueAccent}"
                            Foreground="White"
                            Padding="12,8"
                            BorderThickness="0"
                            FontSize="13"
                            Margin="0,0,12,0"
                            Cursor="Hand"
                            Click="AddService_Click"
                            Template="{StaticResource RoundedButtonTemplate}"/>

                    <ComboBox x:Name="TechnicianComboBox"
                              Style="{StaticResource BlackOutlineComboBox}"
                              Width="200"
                              Height="34"
                              FontSize="13"
                              Tag="Select Technician"
                              DisplayMemberPath="Name"
                              ItemsSource="{Binding AvailableTechnicians}"
                              SelectedItem="{Binding SelectedTechnician}"/>
                </StackPanel>

                <!-- Services Table Card -->
                <Border Grid.Row="3"
                        Background="{StaticResource HeaderBackground}"
                        CornerRadius="8"
                        Margin="0,0,0,20"
                        BorderThickness="0">
                    <ScrollViewer Style="{StaticResource CustomScrollViewer}"
                                  VerticalScrollBarVisibility="Auto"
                                  MaxHeight="250">
                        <ListView x:Name="ServicesListView"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  SelectionMode="Single"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled">

                            <ListView.View>
                                <GridView>

                                    <GridViewColumn Header="Service Name" Width="280">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Service.Name}"
                                                           FontWeight="SemiBold"
                                                           FontSize="13"
                                                           Foreground="Black"
                                                           VerticalAlignment="Center"
                                                           TextAlignment="Left"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Price" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Service.Price, StringFormat='₱ {0:N2}'}"
                                                           FontSize="13"
                                                           Foreground="Black"
                                                           VerticalAlignment="Center"
                                                           TextAlignment="Left"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Status" Width="165">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button x:Name="StatusButton"
                                                        Padding="10,6"
                                                        BorderThickness="0"
                                                        FontWeight="SemiBold"
                                                        FontSize="7"
                                                        HorizontalAlignment="Left"
                                                        Cursor="Hand"
                                                        Click="StatusButton_Click"
                                                        Template="{StaticResource RoundedButtonTemplate}">
                                                    <Button.Style>
                                                
                                                        <Style TargetType="Button">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                    <Setter Property="Content" Value="Set to Ongoing"/>
                                                                    <Setter Property="Background" Value="{StaticResource OngoingColor}"/>
                                                                    <Setter Property="Foreground" Value="Black"/>
                                                                    <Setter Property="IsEnabled" Value="True"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Ongoing">
                                                                    <Setter Property="Content" Value="Set to Completed"/>
                                                                    <Setter Property="Background" Value="{StaticResource CompletedColor}"/>
                                                                    <Setter Property="Foreground" Value="Black"/>
                                                                    <Setter Property="IsEnabled" Value="True"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                    <Setter Property="Content" Value="Completed"/>
                                                                    <Setter Property="Background" Value="{StaticResource CompletedColor}"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                    <Setter Property="IsEnabled" Value="False"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                    <Setter Property="Content" Value="Cancelled"/>
                                                                    <Setter Property="Background" Value="#888888"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                    <Setter Property="IsEnabled" Value="False"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Action" Width="90">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Cancel"
                                                        Background="{StaticResource CancelColor}"
                                                        Foreground="White"
                                                        Padding="10,6"
                                                        BorderThickness="0"
                                                        FontWeight="SemiBold"
                                                        FontSize="11"
                                                        HorizontalAlignment="Left"
                                                        Cursor="Hand"
                                                        Click="CancelService_Click"
                                                        Template="{StaticResource RoundedButtonTemplate}">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="IsEnabled" Value="True"/>
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </Border>

                <!-- Total Cost -->
                <TextBlock Grid.Row="4" Margin="0,0,0,0" FontWeight="Bold" FontSize="16">
                    <Run Text="Total cost: "/>
                    <Run x:Name="TotalCostRun" Text="₱ 5,999.00"/>
                </TextBlock>

                <!-- Empty row for spacing -->
                <Grid Grid.Row="5"/>

                <!-- Action Buttons Removed - changes auto-save when status/technician updated -->
                <Grid Grid.Row="6"/>

            </Grid>
        </Border>

        <!-- Select Service Modal -->
        <local:SelectServiceModal x:Name="SelectServiceModalControl"/>
    </Grid>
</UserControl>