<UserControl x:Class="gentech_services.Views.UserControls.EditOrderModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:gentech_services.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelText">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style TargetType="TextBox" x:Key="EditTextBox" BasedOn="{StaticResource OutlineTextBox}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>
        <Style TargetType="ComboBox" x:Key="EditComboBox" BasedOn="{StaticResource OutlineComboBox}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>
        <Style TargetType="DatePicker" x:Key="EditDatePicker" BasedOn="{StaticResource OutlineDatePicker}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Height" Value="35"/>
        </Style>
    </UserControl.Resources>

    <!-- Modal Overlay -->
    <Grid x:Name="ModalOverlay" Background="#80000000" Visibility="Collapsed">
        <Border Background="White"
                CornerRadius="8"
                MaxWidth="850"
                MaxHeight="400"
                Margin="40"
                Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="View Order" FontSize="20" FontWeight="SemiBold" Margin="0,0,12,0"/>
                        <TextBlock x:Name="OrderIdText" Text="#S001" FontSize="20" FontWeight="SemiBold"/>

                        <Border x:Name="StatusBadge" Background="#FFE5E5" CornerRadius="12" Padding="12,4" Margin="40,0,0,0">
                            <TextBlock x:Name="StatusText" Text="Ongoing" FontSize="12" Foreground="#FF4444"/>
                        </Border>

                        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                                CornerRadius="12" Padding="12,4" Margin="20,0,0,0">
                            <TextBlock x:Name="CreatedDateText" Text="Created: 02/11/2025"
                                       FontSize="12" Foreground="#888888"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <Button Content="âœ•"
                            FontSize="18"
                            Width="32"
                            Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Customer Section -->
                        <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1"
                                CornerRadius="4" Padding="16">
                            <StackPanel>
                                <TextBlock Text="Customer" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,16"/>

                                <TextBlock Text="First Name" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="CustomerFirstNameTextBox" Text="Keith" Style="{StaticResource EditTextBox}"/>

                                <TextBlock Text="Last Name" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="CustomerLastNameTextBox" Text="Soriano" Style="{StaticResource EditTextBox}"/>

                                <TextBlock Text="Email" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="CustomerEmailTextBox" Text="soriano@gmail.com" Style="{StaticResource EditTextBox}"/>

                                <TextBlock Text="Contact No." Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="CustomerPhoneTextBox" Text="0939-654-2275" Style="{StaticResource EditTextBox}"/>
                            </StackPanel>
                        </Border>

                        <!-- Service Details Section -->
                        <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1"
                                CornerRadius="4" Padding="16">
                            <StackPanel>
                                <TextBlock Text="Service Details" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,16"/>

                                <TextBlock Text="Service Type" Style="{StaticResource LabelText}"/>
                                <ComboBox x:Name="ServiceTypeComboBox" Style="{StaticResource EditComboBox}"
                                          DisplayMemberPath="Name"/>

                                <TextBlock Text="Device" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="DeviceTextBox" Text="Motherboard" Style="{StaticResource EditTextBox}"/>

                                <TextBlock Text="Technician" Style="{StaticResource LabelText}"/>
                                <ComboBox x:Name="TechnicianComboBox" Style="{StaticResource EditComboBox}"
                                          DisplayMemberPath="Name"
                                          MaxDropDownHeight="150"/>

                                <TextBlock Text="Cost" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="CostTextBox" Text="5999" Style="{StaticResource EditTextBox}"/>

                                <TextBlock Text="Appointment Date" Style="{StaticResource LabelText}"/>
                                <DatePicker x:Name="AppointmentDatePicker"
                                            Style="{StaticResource EditDatePicker}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
