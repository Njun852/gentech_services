<UserControl x:Class="gentech_services.Views.UserControls.ServiceOrdersTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:gentech_services.Converters"
             xmlns:local="clr-namespace:gentech_services.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="850" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:StatusToCancelVisibilityConverter x:Key="StatusToCancelVisibilityConverter"/>
        <conv:StatusToSetOngoingVisibilityConverter x:Key="StatusToSetOngoingVisibilityConverter"/>
        <conv:StatusToSetCompletedVisibilityConverter x:Key="StatusToSetCompletedVisibilityConverter"/>
        <conv:StatusToEditVisibilityConverter x:Key="StatusToEditVisibilityConverter"/>
    </UserControl.Resources>
    <Border CornerRadius="14" Background="White" ClipToBounds="True" Margin="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="#EFEFEF" Padding="8,4,8,4" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Service Orders" VerticalAlignment="Center"
                   FontWeight="SemiBold" FontSize="18"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal"
                    HorizontalAlignment="Right">
                        <ComboBox Style="{StaticResource OutlineComboBox}"
                      Width="120" Margin="0,0,8,0"
                      Height="30"
                      FontSize="11"
                      ItemsSource="{Binding StatusFilters}"
                      SelectedItem="{Binding SelectedStatusFilter}"/>
                        <ComboBox Width="120" Style="{StaticResource OutlineComboBox}"
                      Height="30"
                      FontSize="11"
                      ItemsSource="{Binding AvailableTechnicians}"
                      SelectedItem="{Binding SelectedTechnicianFilter}"
                      DisplayMemberPath="FullName"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Padding" Value="2"/>
                        <Setter Property="FontSize" Value="10"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.8*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="ID" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="CUSTOMER" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="SERVICES" TextWrapping="Wrap"
                TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="3" Text="PRICE" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="4" Text="DATE CREATED" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="5" Text="STATUS" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="6" Text="ACTION" VerticalAlignment="Center"/>
            </Grid>
            <Border Grid.Row="2" CornerRadius="0,0,14,14" ClipToBounds="True">
                <ScrollViewer Style="{StaticResource CustomScrollViewer}"
                            VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Disabled"
                            Padding="0,0,0,12">
                    <ItemsControl
              ItemsSource="{Binding ViewModel.GroupedServiceOrders, RelativeSource={RelativeSource AncestorType=UserControl}}"
              d:ItemsSource="{d:SampleData ItemCount=5}"
              AlternationCount="2">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource AlternatingRow}" Padding="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.8*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="2.5*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="0.8*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="2"/>
                                            <Setter Property="FontSize" Value="10"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </Grid.Resources>

                                    <TextBlock Grid.Column="0" Text="{Binding ServiceOrderID, StringFormat=S{0:000}}"
                               VerticalAlignment="Center" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="1" Text="{Binding FullName}"
                               VerticalAlignment="Center" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="2" Text="{Binding ServicesDisplay}"
                               TextWrapping="Wrap" FontWeight="Bold"
                               TextAlignment="Center" VerticalAlignment="Center"
                               Padding="4,2"/>
                                    <TextBlock Grid.Column="3" Text="{Binding TotalPrice, StringFormat=₱ {0:N0}}"
                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" Text="{Binding ScheduledAt, StringFormat=dd/MM/yyyy}"
                               VerticalAlignment="Center"/>
                                    <Border Grid.Column="5" VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Padding="8,4,8,4"
                                CornerRadius="12">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                        <Setter Property="Background" Value="#E5F8E5"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                        <Setter Property="Background" Value="#F0F0F0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                        <Setter Property="Background" Value="#FFF4E5"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="In Progress">
                                                        <Setter Property="Background" Value="#E5F0FF"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <Binding Path="Status"/>
                                            </TextBlock.Text>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="Text" Value="Completed">
                                                            <Setter Property="Foreground" Value="#44AA44"/>
                                                        </Trigger>
                                                         <Trigger Property="Text" Value="Cancelled">
                                                            <Setter Property="Foreground" Value="#888888"/>
                                                        </Trigger>
                                                         <Trigger Property="Text" Value="Pending">
                                                            <Setter Property="Foreground" Value="#FF8800"/>
                                                        </Trigger>
                                                          <Trigger Property="Text" Value="In Progress">
                                                            <Setter Property="Foreground" Value="#3366CC"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                    <Button Style="{StaticResource KebabMenuButton}"
                                         Grid.Column="6"
                                            Background="White"
                                            BorderThickness="1"
                                         Click="KebabMenu_Click"
                                         Tag="{Binding}">
                                        <Button.ContextMenu>
                                            <ContextMenu HasDropShadow="True" Width="200">
                                                <ContextMenu.Template>
                                                    <ControlTemplate TargetType="ContextMenu">
                                                        <Border Background="White"
                                                                BorderBrush="Black"
                                                                BorderThickness="1"
                                                                CornerRadius="8"
                                                                Padding="4">
                                                            <StackPanel>
                                                                <Button Content="View"
                                                                        Style="{StaticResource OutlineButton}"
                                                                        Background="White"
                                                                        Foreground="Black"
                                                                        FontWeight="Normal"
                                                                        BorderThickness="0"
                                                                        Height="32"
                                                                        Margin="0,0,0,4"
                                                                        HorizontalContentAlignment="Left"
                                                                        Click="ViewMenuItem_Click"
                                                                        Tag="8"/>
                                                                <Button Content="Edit Services"
                                                                        Style="{StaticResource OutlineButton}"
                                                                        Background="White"
                                                                        Foreground="Black"
                                                                        FontWeight="Normal"
                                                                        BorderThickness="0"
                                                                        Height="32"
                                                                        Margin="0,0,0,4"
                                                                        HorizontalContentAlignment="Left"
                                                                        Click="EditMenuItem_Click"
                                                                        Tag="8"
                                                                        Visibility="{Binding Tag.Status, RelativeSource={RelativeSource AncestorType=ContextMenu}, Converter={StaticResource StatusToEditVisibilityConverter}}"/>
                                                                <Button Content="Edit Appointment"
                                                                        Style="{StaticResource OutlineButton}"
                                                                        Background="White"
                                                                        Foreground="Black"
                                                                        FontWeight="Normal"
                                                                        BorderThickness="0"
                                                                        Height="32"
                                                                        Margin="0"
                                                                        HorizontalContentAlignment="Left"
                                                                        Click="EditAppointmentMenuItem_Click"
                                                                        Tag="8"
                                                                        Visibility="{Binding Tag.Status, RelativeSource={RelativeSource AncestorType=ContextMenu}, Converter={StaticResource StatusToEditVisibilityConverter}}"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ContextMenu.Template>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</UserControl>
