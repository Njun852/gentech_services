<UserControl x:Class="gentech_services.Views.UserControls.ServiceOrdersTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gentech_services.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="800">
    <Border CornerRadius="14" Background="White" ClipToBounds="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Border Background="#EFEFEF" Padding="12,4,12,4" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Service Orders" VerticalAlignment="Center" 
                   FontWeight="SemiBold" FontSize="24"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
                        <ComboBox Style="{StaticResource OutlineComboBox}" 
                      Width="120" Margin="0,0,8,0" Tag="All Statuses"
                      Height="30"/>
                        <ComboBox Width="120" Style="{StaticResource OutlineComboBox}"
                      Tag="Any Technician" Height="30"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Padding" Value="4"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="ID" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="SERVICE TYPE" TextWrapping="Wrap" 
                TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="CUSTOMER" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="3" Text="TECHNICIAN" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="4" Text="PRICE" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="5" Text="DATE CREATED" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="6" Text="STATUS" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="7" Text="ACTION" VerticalAlignment="Center"/>
            </Grid>
            <Border Grid.Row="2" CornerRadius="0,0,14,14" ClipToBounds="True">
                <ItemsControl
              ItemsSource="{Binding ServiceOrders}"
              d:ItemsSource="{d:SampleData ItemCount=5}"
              AlternationCount="2">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource AlternatingRow}" Padding="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="FontSize" Value="12"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </Grid.Resources>

                                    <TextBlock Grid.Column="0" Text="S001" 
                               VerticalAlignment="Center" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="1" Text="Broken Motherboard"
                               TextWrapping="Wrap" FontWeight="Bold"
                               TextAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="M. Soriano" 
                               VerticalAlignment="Center" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="3" Text="M. Soriano" 
                               VerticalAlignment="Center" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="4" Text="₱ 5,999" 
                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="5" Text="02/11/2025" 
                               VerticalAlignment="Center"/>
                                    <Border Grid.Column="6" VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Padding="8,4,8,4"
                                Background="#190000FF" CornerRadius="12">
                                        <TextBlock>
                                            <TextBlock.Text>Completed</TextBlock.Text>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <Trigger Property="Text" Value="Completed">
                                                            <Setter Property="Foreground" Value="#00C206"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                    <Button Style="{StaticResource KebabMenuButton}" 
                                Grid.Column="7" Background="White" BorderThickness="1"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Grid>
    </Border>
</UserControl>
