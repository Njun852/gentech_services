<UserControl x:Class="YourApp.Views.EditUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Width="500" Height="264">

    <Grid Margin="20" Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Edit User"
                   FontSize="24"
                   FontWeight="Bold"
                   Grid.Row="0"/>

        <!-- Form Layout -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Full Name -->
            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Full Name" FontWeight="SemiBold"/>
                <TextBox Width="200" Height="32" Text="Juan Pablo"/>
            </StackPanel>

            <!-- Username -->
            <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Username" FontWeight="SemiBold"/>
                <TextBox Width="200" Height="32" Text="Pablo Jab"/>
            </StackPanel>

            <!-- Role -->
            <StackPanel Grid.Column="0" Grid.Row="1">
                <TextBlock Text="Role" FontWeight="SemiBold"/>
                <ComboBox Width="200" Height="32">
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="Inventory" IsSelected="True"/>
                    <ComboBoxItem Content="Technician"/>
                </ComboBox>
            </StackPanel>

            <!-- PIN -->
            <StackPanel Grid.Column="2" Grid.Row="1">
                <TextBlock Text="PIN (4-6 digits)" FontWeight="SemiBold"/>
                <TextBox Width="200" Height="32" Text="1234"/>
            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Left">
            <Button Content="Cancel" Width="70" Height="30" Margin="0,0,10,0"/>
            <Button Content="Save" Width="70" Height="30" Background="#0066FF" Foreground="White"/>
        </StackPanel>

    </Grid>
</UserControl>
