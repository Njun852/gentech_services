
<UserControl x:Class="gentech_services.Views.UserControls.EditAppointmentModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BlueAccent" Color="#0000FF"/>

        <!-- Modal Shadow Effect -->
        <DropShadowEffect x:Key="ModalShadowEffect"
                          Color="Black"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Direction="270"
                          Opacity="0.15"/>

        <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    CornerRadius="5"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
            </Border>
        </ControlTemplate>

    </UserControl.Resources>

    <Grid x:Name="ModalOverlay"
          Background="#80000000"
          Visibility="Collapsed"
          d:Visibility="Visible"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <Border Background="White"
                CornerRadius="10"
                MaxWidth="700"
                MaxHeight="600"
                Margin="40"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource ModalShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with Close Button -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Edit Appointment " FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock x:Name="OrderIdText" Text="#S001" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button Content="âœ•"
                            FontSize="18"
                            Width="32" Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="CloseButton_Click"
                            Cursor="Hand"/>
                </Grid>

                <!-- Customer Information -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Style="{StaticResource CustomScrollViewer}">
                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Customer Name -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                            <TextBlock Text="Customer Name" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <Border Background="White"
                                    BorderBrush="#DDE1E6"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Effect="{StaticResource BorderShadow}">
                                <TextBox x:Name="CustomerNameTextBox"
                                         FontSize="13"
                                         Padding="8"
                                         Background="Transparent"
                                         BorderThickness="0"/>
                            </Border>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,12">
                            <TextBlock Text="Email" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <Border Background="White"
                                    BorderBrush="#DDE1E6"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Effect="{StaticResource BorderShadow}">
                                <TextBox x:Name="EmailTextBox"
                                         FontSize="13"
                                         Padding="8"
                                         Background="Transparent"
                                         BorderThickness="0"/>
                            </Border>
                        </StackPanel>

                        <!-- Phone -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,12">
                            <TextBlock Text="Phone" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <Border Background="White"
                                    BorderBrush="#DDE1E6"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Effect="{StaticResource BorderShadow}">
                                <TextBox x:Name="PhoneTextBox"
                                         FontSize="13"
                                         Padding="8"
                                         Background="Transparent"
                                         BorderThickness="0"/>
                            </Border>
                        </StackPanel>

                        <!-- Appointment Date -->
                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,12">
                            <TextBlock Text="Appointment Date" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <Border Background="White"
                                    BorderBrush="#DDE1E6"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Effect="{StaticResource BorderShadow}">
                                <DatePicker x:Name="AppointmentDatePicker"
                                            FontSize="13"
                                            Padding="8"
                                            Background="Transparent"
                                            BorderThickness="0"/>
                            </Border>
                        </StackPanel>

                        <!-- Issue Description -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,0">
                            <TextBlock Text="Issue Description" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <Border Background="White"
                                    BorderBrush="#DDE1E6"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Effect="{StaticResource BorderShadow}">
                                <TextBox x:Name="IssueDescriptionTextBox"
                                         Height="120"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         FontSize="13"
                                         VerticalContentAlignment="Top"
                                         Padding="8"
                                         Background="Transparent"
                                         BorderThickness="0"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel"
                            Width="100" Height="36"
                            Background="White" Foreground="Black"
                            BorderBrush="Black" BorderThickness="1"
                            FontSize="13"
                            Margin="0,0,8,0"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            Template="{StaticResource RoundedButtonTemplate}"/>

                    <Button Content="Save Changes"
                            Width="130" Height="36"
                            Background="{StaticResource BlueAccent}" Foreground="White"
                            FontSize="13" FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="SaveChanges_Click"
                            Template="{StaticResource RoundedButtonTemplate}"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</UserControl>
