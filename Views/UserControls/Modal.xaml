<UserControl x:Class="gentech_services.Views.UserControls.Modal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid Background="#66000000">
        <Border Width="720"
                Padding="20"
                Background="White"
                BorderBrush="#000000"
                BorderThickness="1"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ========== HEADER ========== -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Order Title -->
                    <TextBlock Grid.Column="0"
                               Text="View Order  #SO01"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>

                    <!-- Status -->
                    <Border Grid.Column="1"
                            Margin="20,0,0,0"
                            Padding="14,3"
                            CornerRadius="12"
                            Background="#FFF9E6F3"
                            BorderBrush="#FFE7B5D3"
                            BorderThickness="1"
                            VerticalAlignment="Center">
                        <TextBlock Text="Ongoing"
                                   FontSize="12"
                                   Foreground="#FFCA4E89"/>
                    </Border>

                    <!-- Created Date -->
                    <Border Grid.Column="2"
                            Margin="10,0,0,0"
                            Padding="14,3"
                            CornerRadius="12"
                            Background="#FFF5F5F5"
                            BorderBrush="#FFE0E0E0"
                            BorderThickness="1"
                            VerticalAlignment="Center">
                        <TextBlock Text="Created: 02/11/2025"
                                   FontSize="12"
                                   Foreground="#FF444444"/>
                    </Border>

                    <!-- Close Button -->
                    <Button Grid.Column="4"
                            Content="✕"
                            Width="24"
                            Height="24"
                            Margin="0,0,0,0"
                            Padding="0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            FontSize="14"
                            ToolTip="Close"/>
                </Grid>

                <!-- ========== BODY ========== -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- CUSTOMER CARD -->
                        <Border Grid.Column="0"
                                Margin="0,0,10,0"
                                Padding="16"
                                BorderBrush="#000000"
                                BorderThickness="1"
                                CornerRadius="6">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="Customer"
                                           FontWeight="Bold"
                                           Margin="0,0,0,6"/>

                                <!-- Name -->
                                <Grid Grid.Row="2" Margin="0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Name"
                                               Foreground="#FF888888"/>
                                    <TextBlock Grid.Column="1"
                                               Text="Keith Justin Soriano"/>
                                </Grid>

                                <!-- Email -->
                                <Grid Grid.Row="3" Margin="0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Email"
                                               Foreground="#FF888888"/>
                                    <TextBlock Grid.Column="1"
                                               Text="soriano@gmail.com"/>
                                </Grid>

                                <!-- Contact No -->
                                <Grid Grid.Row="4" Margin="0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Contact No."
                                               Foreground="#FF888888"/>
                                    <TextBlock Grid.Column="1"
                                               Text="1234-567-890"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- SERVICE DETAILS CARD -->
                        <Border Grid.Column="1"
                                Margin="10,0,0,0"
                                Padding="16"
                                BorderBrush="#000000"
                                BorderThickness="1"
                                CornerRadius="6">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="Service Details"
                                           FontWeight="Bold"
                                           Margin="0,0,0,6"/>

                                <!-- Service Type -->
                                <Grid Grid.Row="2" Margin="0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Service Type"
                                               Foreground="#FF888888"/>
                                    <TextBlock Grid.Column="1"
                                               Text="Sample" Margin="64,0,-64,0"/>
                                </Grid>

                                <!-- Device -->
                                <Grid Grid.Row="3" Margin="0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Device"
                                               Foreground="#FF888888"/>
                                    <TextBlock Grid.Column="1"
                                               Text="Sample"/>
                                </Grid>

                                <!-- Technician -->
                                <Grid Grid.Row="4" Margin="0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Technician"
                                               Foreground="#FF888888"/>
                                    <TextBlock Grid.Column="1"
                                               Text="0939-654-2275"/>
                                </Grid>

                                <!-- Cost -->
                                <Grid Grid.Row="5" Margin="0,6">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="3*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Cost"
                                               Foreground="#FF888888"
                                               Grid.RowSpan="2"/>
                                    <TextBlock Grid.Column="1"
                                               Text="₱ 5,999"
                                               FontWeight="SemiBold"
                                               Grid.RowSpan="2"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- DESCRIPTION CARD -->
                    <Border Grid.Row="2"
                            Padding="16"
                            BorderBrush="#000000"
                            BorderThickness="1"
                            CornerRadius="6">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Description"
                                       FontWeight="Bold"/>

                            <TextBlock Grid.Row="2"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,0"
                                       Text="“Cogito Ergo Sum Cogito Ergo Sum”"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
