<UserControl x:Class="gentech_services.Views.UserControls.AddServiceModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:gentech_services.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="400">
    <Border Background="White" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="Create Service"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,16"/>

            <!-- Form Fields -->
            <StackPanel Grid.Row="1">
                <!-- Name -->
                <TextBlock Text="Name"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="ServiceNameTextBox"
                         Style="{StaticResource BlackOutlineTextBox}"
                         Tag="Service Name"
                         Height="32"
                         FontSize="12"
                         Margin="0,0,0,12"/>

                <!-- Description -->
                <TextBlock Text="Description"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="ServiceDescriptionTextBox"
                         Style="{StaticResource BlackOutlineTextBoxMultiline}"
                         Tag=""
                         Height="60"
                         FontSize="12"
                         Margin="0,0,0,12"/>

                <!-- Price -->
                <TextBlock Text="Price"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="ServicePriceTextBox"
                         Style="{StaticResource BlackOutlineTextBox}"
                         Tag="â‚± 10,000"
                         Height="32"
                         FontSize="12"
                         Margin="0,0,0,12"/>

                <!-- Category -->
                <TextBlock Text="Category"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <ComboBox x:Name="ServiceCategoryComboBox"
                          Style="{StaticResource BlackOutlineComboBox}"
                          Height="32"
                          FontSize="12"
                          DisplayMemberPath="Name"
                          Margin="0,0,0,12"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal">
                    <Button Content="Save"
                            x:Name="SaveButton"
                            Width="80"
                            Height="32"
                            Background="#0000FF"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Margin="0,0,8,0"
                            Click="SaveButton_Click"/>
                    <Button Content="Clear"
                            x:Name="ClearButton"
                            Width="80"
                            Height="32"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            FontSize="12"
                            Click="ClearButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
