<UserControl x:Class="gentech_services.Views.Pages.ProductManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gentech_services.Views.Pages"
             xmlns:userControl="clr-namespace:gentech_services.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="800">
    <Grid MaxWidth="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Background="#EFEFEF" Padding="12,4,12,4" CornerRadius="8" >
            <StackPanel Orientation="Vertical">
                <TextBlock  Text="Product Management"  FontWeight="SemiBold" FontSize="24"/>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                        
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="TxtProductSearch" Grid.Column="0" Style="{StaticResource OutlineTextBox}" Tag="Search by name or category" Height="30" FontSize="12" BorderBrush="#000000" />
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" >
                        <ComboBox Style="{StaticResource OutlineComboBox}" Width="120" Margin="0,0,10,0" Tag="All Categories" Height="30"/>
                        <Button Style="{StaticResource OutlineButton}" Width="100" Background="#0000FF" Content="+ New Product" Foreground="White"/>
                    </StackPanel>
                    
                </Grid>
                
            </StackPanel>
            
        </Border>
        <userControl:LowStockAlert Grid.Row="1" Margin="0,20,0,20"/>
        <userControl:ProductManagementTable Grid.Row="2" />


    </Grid>
</UserControl>
