<UserControl x:Class="gentech_services.Views.Pages.ServiceManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:gentech_services.Views.Pages"
             xmlns:converters="clr-namespace:gentech_services.Converters"
             xmlns:controls="clr-namespace:gentech_services.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200" Background="White">
    <UserControl.Resources>
        <converters:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
    </UserControl.Resources>
    <Grid>
        <!-- Main Content -->
        <Grid Margin="32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Gray Background -->
        <Border Grid.Row="0" Background="#EFEFEF" Padding="16" CornerRadius="8" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Service Management"
                           FontSize="28" FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <Border Grid.Column="1"
                        Background="White"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="8">
                    <TextBox x:Name="SearchTextBox"
                             Style="{StaticResource OutlineTextBox}"
                             Tag="Search Service"
                             Width="200"
                             Height="38"
                             FontSize="13"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalContentAlignment="Center"
                             TextChanged="SearchTextBox_TextChanged"/>
                </Border>

                <Button Grid.Column="3"
                        Content="New Service"
                        Style="{StaticResource PrimaryButton}"
                        Background="#0000FF"
                        Width="120"
                        Height="40"
                        Click="NewService_Click"/>
            </Grid>
        </Border>

        <!-- Services Table -->
        <Border Grid.Row="1" CornerRadius="8" BorderBrush="Black"
                BorderThickness="1" Margin="0,0,0,20" ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Table Header -->
                <Border Grid.Row="0" Background="White" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="0.8*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="16,0,0,0"/>
                        </Style>
                    </Grid.Resources>

                    <TextBlock Grid.Column="0" Text="NAME"/>
                    <TextBlock Grid.Column="1" Text="CATEGORY"/>
                    <TextBlock Grid.Column="2" Text="PRICE"/>
                    <TextBlock Grid.Column="3" Text="UPDATED"/>
                    <TextBlock Grid.Column="4" Text="ACTION"/>
                </Grid>
                </Border>

                <!-- Table Content -->
                <Border Grid.Row="1" CornerRadius="0,0,8,8" ClipToBounds="True">
                    <ScrollViewer Style="{StaticResource CustomScrollViewer}"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="ServicesItemsControl"
                                      AlternationCount="2">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource AlternatingRow}"
                                            CornerRadius="5"
                                            Padding="16,12"
                                            Margin="4,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="0.8*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontSize" Value="13"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Margin" Value="16,0,0,0"/>
                                                </Style>
                                            </Grid.Resources>

                                            <TextBlock Grid.Column="0" Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Category.Name}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Price, StringFormat='₱ {0:N2}'}"/>
                                            <TextBlock Grid.Column="3" Text="{Binding UpdatedAt, StringFormat='MM/dd/yyyy'}"/>

                                            <!-- Action Button -->
                                            <Button Grid.Column="4"
                                                    Style="{StaticResource KebabMenuButton}"
                                                    Background="White"
                                                    BorderThickness="1"
                                                    HorizontalAlignment="Center"
                                                    Click="ServiceActionButton_Click"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>

        <!-- Categories Section -->
        <Border Grid.Row="2" Padding="0" ClipToBounds="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Categories Table -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Categories Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Category ID" FontWeight="SemiBold" FontSize="12" Margin="16,0,0,0"/>
                        <TextBlock Grid.Column="1" Text="Name" FontWeight="SemiBold" FontSize="12" Margin="16,0,0,0"/>
                        <TextBlock Grid.Column="2" Text="Services Count" FontWeight="SemiBold" FontSize="12" Margin="16,0,0,0"/>
                        <TextBlock Grid.Column="3" Text="Action" FontWeight="SemiBold" FontSize="12" Margin="16,0,0,0"/>
                    </Grid>

                    <!-- Categories Content -->
                    <ScrollViewer Grid.Row="1"
                                  Style="{StaticResource CustomScrollViewer}"
                                  VerticalScrollBarVisibility="Auto"
                                  MaxHeight="200">
                        <ItemsControl x:Name="CategoriesItemsControl"
                                      AlternationCount="2">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource AlternatingRow}"
                                            CornerRadius="5"
                                            Padding="16,12"
                                            Margin="0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding CategoryID}" FontSize="13" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding ServicesCount}" FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button Content="Rename"
                                                        Style="{StaticResource OutlineButton}"
                                                        Background="White"
                                                        Height="28"
                                                        Width="70"
                                                        FontSize="11"
                                                        Margin="0,0,8,0"
                                                        Tag="4"
                                                        Click="RenameCategory_Click"/>
                                                <Button Content="Delete"
                                                        Style="{StaticResource OutlineButton}"
                                                        Background="#FF0000"
                                                        Foreground="White"
                                                        Height="28"
                                                        Width="70"
                                                        FontSize="11"
                                                        Tag="4"
                                                        Click="DeleteCategory_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>

                <!-- Add Category Section -->
                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Top" Width="180">
                    <TextBox x:Name="NewCategoryTextBox"
                             Style="{StaticResource OutlineTextBox}"
                             Tag="New Category"
                             Height="38"
                             FontSize="13"
                             VerticalContentAlignment="Center"
                             Margin="0,0,0,8"/>

                    <Button Content="Add Category"
                            Style="{StaticResource PrimaryButton}"
                            Background="#00C206"
                            Foreground="Black"
                            FontWeight="SemiBold"
                            Height="38"
                            FontSize="12"
                            Click="AddCategory_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        </Grid>

        <!-- Modal Overlay -->
        <Grid x:Name="ModalOverlay"
              Background="Transparent"
              Visibility="Collapsed"
              MouseDown="ModalOverlay_MouseDown">
            <Border Background="White"
                    CornerRadius="12"
                    Width="380"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0,60,20,0">
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                                      Opacity="0.25"
                                      BlurRadius="15"
                                      ShadowDepth="2"/>
                </Border.Effect>
                <controls:AddServiceModal x:Name="AddServiceModalControl"/>
            </Border>
        </Grid>

        <!-- Edit Service Modal Overlay -->
        <Grid x:Name="EditModalOverlay"
              Background="#B3FFFFFF"
              Visibility="Collapsed"
              MouseDown="EditModalOverlay_MouseDown">
            <Border Width="380"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                                      Opacity="0.25"
                                      BlurRadius="15"
                                      ShadowDepth="2"/>
                </Border.Effect>
                <controls:EditServiceModal x:Name="EditServiceModalControl"/>
            </Border>
        </Grid>

        <!-- Service Action Menu Popup -->
        <Popup x:Name="ServiceActionPopup"
               StaysOpen="False"
               AllowsTransparency="True"
               Placement="Bottom">
            <controls:ServiceActionMenu x:Name="ServiceActionMenuControl"/>
        </Popup>
    </Grid>
</UserControl>
