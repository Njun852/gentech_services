<UserControl x:Class="gentech_services.Views.Pages.UserManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:gentech_services.Views.Pages"
             xmlns:converters="clr-namespace:gentech_services.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200" Background="White">
    <UserControl.Resources>
        <converters:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
    </UserControl.Resources>
    <Grid Margin="32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Gray Background -->
        <Border Grid.Row="0" Background="#EFEFEF" Padding="16" CornerRadius="8" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="User Management"
                           FontSize="28" FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <Border Grid.Column="1"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="8">
                    <TextBox x:Name="SearchTextBox"
                             Style="{StaticResource OutlineTextBox}"
                             Tag="Search by ID, or Name"
                             Width="200"
                             Height="38"
                             FontSize="14"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalContentAlignment="Center"
                             TextChanged="SearchTextBox_TextChanged"/>
                </Border>
            </Grid>
        </Border>

        <!-- Content Area: Table + Add User Form Side by Side -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- Users Table -->
            <Border x:Name="UsersTableBorder"
                        Grid.Column="0"
                        Background="White"
                        BorderBrush="#333333"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="0"
                        ClipToBounds="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header -->
                    <Border Grid.Row="0"
                                Background="White"
                                BorderThickness="0"
                                CornerRadius="8,8,0,0"
                                Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="ID" FontWeight="Bold" FontSize="12" Foreground="#333"/>
                            <TextBlock Grid.Column="1" Text="NAME" FontWeight="Bold" FontSize="12" Foreground="#333"/>
                            <TextBlock Grid.Column="2" Text="USERNAME" FontWeight="Bold" FontSize="12" Foreground="#333"/>
                            <TextBlock Grid.Column="3" Text="ROLE" FontWeight="Bold" FontSize="12" Foreground="#333"/>
                            <TextBlock Grid.Column="4" Text="ACTION" FontWeight="Bold" FontSize="12" Foreground="#333" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Table Content -->
                    <ScrollViewer Grid.Row="1"
                                      Style="{StaticResource CustomScrollViewer}"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="UsersItemsControl" Padding="0" AlternationCount="2">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource AlternatingRow}"
                                                CornerRadius="5"
                                                Padding="16,12"
                                                Margin="4,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- ID -->
                                            <TextBlock Grid.Column="0"
                                                           Text="{Binding UserID, StringFormat='U{0:000}'}"
                                                           FontSize="13"
                                                           VerticalAlignment="Center"
                                                           Foreground="#333"/>

                                            <!-- Name -->
                                            <TextBlock Grid.Column="1"
                                                           Text="{Binding Name}"
                                                           FontSize="13"
                                                           VerticalAlignment="Center"
                                                           Foreground="#333"/>

                                            <!-- Username -->
                                            <TextBlock Grid.Column="2"
                                                           Text="{Binding Username}"
                                                           FontSize="13"
                                                           VerticalAlignment="Center"
                                                           Foreground="#333"/>

                                      

                                            <!-- Role -->
                                            <TextBlock Grid.Column="3"
                                                           Text="{Binding Role}"
                                                           FontSize="13"
                                                           VerticalAlignment="Center"
                                                           Foreground="#333"/>

                                            <!-- Action Button -->
                                            <Button Grid.Column="4"
                                                        Style="{StaticResource KebabMenuButton}"
                                                        Background="White"
                                                        BorderBrush="#E0E0E0"
                                                        BorderThickness="1"
                                                        Width="28"
                                                        Height="28"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Click="UserActionButton_Click"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Add User Form (Right Side) -->
            <Border x:Name="AddUserFormBorder"
                        Grid.Column="2"
                        Background="White"
                        BorderBrush="#333333"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        VerticalAlignment="Top">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Add User"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#1E1E1E"
                                   Margin="0,0,0,16"/>

                    <!-- Full Name -->
                    <TextBlock Text="Full Name" FontSize="12" FontWeight="Medium" Margin="0,0,0,6" Foreground="#333"/>
                    <TextBox x:Name="FullNameTextBox"
                                 Style="{StaticResource OutlineTextBox}"
                                 Tag="Juan Pablo"
                                 Height="36"
                                 FontSize="13"
                                 VerticalContentAlignment="Center"
                                 Margin="0,0,0,12"/>

                    <!-- Username -->
                    <TextBlock Text="Username" FontSize="12" FontWeight="Medium" Margin="0,0,0,6" Foreground="#333"/>
                    <TextBox x:Name="UsernameTextBox"
                                 Style="{StaticResource OutlineTextBox}"
                                 Tag="Pablo"
                                 Height="36"
                                 FontSize="13"
                                 VerticalContentAlignment="Center"
                                 Margin="0,0,0,12"/>

                    <!-- Role -->
                    <TextBlock Text="Role" FontSize="12" FontWeight="Medium" Margin="0,0,0,6" Foreground="#333"/>
                    <ComboBox x:Name="RoleComboBox"
                                  Style="{StaticResource OutlineComboBox}"
                                  Height="36"
                                  FontSize="13"
                                  Margin="0,0,0,12">
                        <ComboBoxItem Content="Admin"/>
                        <ComboBoxItem Content="Technician"/>
                        <ComboBoxItem Content="Staff" IsSelected="True"/>
                    </ComboBox>

                    <!-- PIN -->
                    <TextBlock Text="PIN (4-6 digits)" FontSize="12" FontWeight="Medium" Margin="0,0,0,6" Foreground="#333"/>
                    <TextBox x:Name="PINTextBox"
                                 Style="{StaticResource OutlineTextBox}"
                                 Tag="0000"
                                 Height="36"
                                 FontSize="13"
                                 VerticalContentAlignment="Center"
                                 MaxLength="6"
                                 Margin="0,0,0,16"/>

                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                    Content="Add User"
                                    Style="{StaticResource OutlineButton}"
                                    Background="#0000FF"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Height="36"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Tag="6"
                                    Click="SaveButton_Click"/>

                        <Button Grid.Column="2"
                                    Content="Clear"
                                    Style="{StaticResource OutlineButton}"
                                    Background="White"
                                    Foreground="#333"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Height="36"
                                    FontSize="12"
                                    Tag="6"
                                    Click="CancelButton_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- User Action Menu Popup -->
        <Popup x:Name="UserActionPopup"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   Placement="Bottom"
                   PlacementTarget="{Binding ElementName=UsersItemsControl}">
            <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="0"
                        MinWidth="120">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="10" ShadowDepth="2"/>
                </Border.Effect>
                <StackPanel Margin="4">
                    <Button Content="Edit"
                                Style="{StaticResource OutlineButton}"
                                Background="White"
                                Foreground="#333"
                                BorderThickness="0"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="12,0"
                                Height="32"
                                FontSize="13"
                                Tag="0"
                                Click="EditUser_Click"/>
                    <Border Height="1" Background="#F0F0F0" Margin="0,4"/>
                    <Button Content="Delete"
                                Background="#FF0000"
                                Foreground="White"
                                BorderThickness="0"
                                HorizontalContentAlignment="Center"
                                Height="32"
                                FontSize="13"
                                Click="DeleteUser_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>
        </Popup>

        <!-- Edit User Modal Overlay (Outside main grid to cover everything) -->
        <Grid x:Name="EditModalOverlay"
              Grid.RowSpan="2"
              Background="#80000000"
              Visibility="Collapsed"
              Margin="-32,-24">
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Width="400"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="24">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="4"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Modal Title -->
                    <TextBlock Text="Edit User"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <!-- Full Name -->
                    <TextBlock Text="Full Name" FontSize="12" FontWeight="Medium" Margin="0,0,0,6" Foreground="#333"/>
                    <TextBox x:Name="EditFullNameTextBox"
                             Style="{StaticResource OutlineTextBox}"
                             Tag="Juan Pablo"
                             Height="36"
                             FontSize="13"
                             VerticalContentAlignment="Center"
                             Margin="0,0,0,12"/>

                    <!-- Username -->
                    <TextBlock Text="Username" FontSize="12" FontWeight="Medium" Margin="0,0,0,6" Foreground="#333"/>
                    <TextBox x:Name="EditUsernameTextBox"
                             Style="{StaticResource OutlineTextBox}"
                             Tag="Pablo Jab"
                             Height="36"
                             FontSize="13"
                             VerticalContentAlignment="Center"
                             Margin="0,0,0,12"/>

                    <!-- Role -->
                    <TextBlock Text="Role" FontSize="12" FontWeight="Medium" Margin="0,0,0,6" Foreground="#333"/>
                    <ComboBox x:Name="EditRoleComboBox"
                              Style="{StaticResource OutlineComboBox}"
                              Height="36"
                              FontSize="13"
                              Margin="0,0,0,12">
                        <ComboBoxItem Content="Admin"/>
                        <ComboBoxItem Content="Technician"/>
                        <ComboBoxItem Content="Staff"/>
                    </ComboBox>

                    <!-- PIN -->
                    <TextBlock Text="PIN (4-6 digits)" FontSize="12" FontWeight="Medium" Margin="0,0,0,6" Foreground="#333"/>
                    <TextBox x:Name="EditPINTextBox"
                             Style="{StaticResource OutlineTextBox}"
                             Tag="1234"
                             Height="36"
                             FontSize="13"
                             VerticalContentAlignment="Center"
                             MaxLength="6"
                             Margin="0,0,0,20"/>

                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="Cancel"
                                Style="{StaticResource OutlineButton}"
                                Background="White"
                                Foreground="#333"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Height="36"
                                FontSize="13"
                                Tag="6"
                                Click="CancelEditButton_Click"/>

                        <Button Grid.Column="2"
                                Content="Save"
                                Style="{StaticResource OutlineButton}"
                                Background="#0000FF"
                                Foreground="White"
                                BorderThickness="0"
                                Height="36"
                                FontSize="13"
                                FontWeight="SemiBold"
                                Tag="6"
                                Click="SaveEditButton_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>