<UserControl x:Class="gentech_services.Views.Pages.ServiceOrderPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:control="clr-namespace:gentech_services.Views.UserControls"
             xmlns:conv="clr-namespace:gentech_services.Converters"
             xmlns:local="clr-namespace:gentech_services.Views.Pages"
             mc:Ignorable="d"
             d:DesignHeight="1050" d:DesignWidth="850" Background="White">
    <UserControl.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <Style TargetType="TextBox"
               BasedOn="{StaticResource OutlineTextBox}">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ErrorTextBlock">
            <Setter Property="Foreground" Value="#FF0000"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,-6,0,8"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Margin="12" MaxWidth="800">
            <TextBlock Text="Set Appointment" FontWeight="SemiBold"
                       FontSize="28" Margin="0,0,0,12"/>

            <!-- First Name -->
            <TextBox Tag="First Name"
                     Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding FirstNameError}"
                       Style="{StaticResource ErrorTextBlock}"
                       Visibility="{Binding FirstNameError, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Last Name -->
            <TextBox Tag="Last Name"
                     Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding LastNameError}"
                       Style="{StaticResource ErrorTextBlock}"
                       Visibility="{Binding LastNameError, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Email -->
            <TextBox Tag="Email"
                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding EmailError}"
                       Style="{StaticResource ErrorTextBlock}"
                       Visibility="{Binding EmailError, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Phone Number -->
            <TextBox Tag="Phone Number"
                     Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding PhoneError}"
                       Style="{StaticResource ErrorTextBlock}"
                       Visibility="{Binding PhoneError, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Service Type -->
            <ComboBox Style="{StaticResource OutlineComboBox}"
                      Height="45"
                      Tag="Service Type"
                      FontSize="18" Margin="0,0,0,8"
                      ItemsSource="{Binding AvailableServices}"
                      SelectedItem="{Binding SelectedService, UpdateSourceTrigger=PropertyChanged}"
                      DisplayMemberPath="Name"/>
            <TextBlock Text="{Binding ServiceError}"
                       Style="{StaticResource ErrorTextBlock}"
                       Visibility="{Binding ServiceError, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Date -->
            <DatePicker Style="{StaticResource OutlineDatePicker}"
                        FontSize="18" Margin="0,0,0,8" Height="45"
                        SelectedDate="{Binding SelectedDate, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding DateError}"
                       Style="{StaticResource ErrorTextBlock}"
                       Visibility="{Binding DateError, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Issue Description -->
            <TextBox Tag="Issue Description" Height="100"
                     Margin="0,0,0,12"
                     Style="{StaticResource OutlineTextBoxMultiline}"
                     FontSize="18"
                     Text="{Binding IssueDescription, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Clear" Margin="0,0,8,0"
                        Height="35" Background="White"
                        Width="120"
                        Style="{StaticResource OutlineButton}"
                        Tag="4"
                        Command="{Binding ClearFormCommand}"/>
                <Button Content="Set Appointment"
                        Width="200"
                        Height="35"
                        Style="{StaticResource OutlineButton}"
                        Background="#0000FF" Foreground="White"
                        Tag="4"
                        Command="{Binding SetAppointmentCommand}"/>
            </StackPanel>
        </StackPanel>
        <control:ServiceOrdersTable Grid.Row="1"
                           MaxWidth="830"
                           ServiceOrders="{Binding ServiceOrders}"
                           ViewModel="{Binding}"/>

        <!-- View Order Modal -->
        <control:ViewOrderModal x:Name="ViewOrderModal" Grid.RowSpan="2"/>

        <!-- Edit Order Modal -->
        <control:EditOrderModal x:Name="EditOrderModal" Grid.RowSpan="2"/>
    </Grid>
</UserControl>
