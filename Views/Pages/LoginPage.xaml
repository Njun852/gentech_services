<UserControl x:Class="gentech_services.Views.Pages.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gentech_services.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="InputBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0000FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1a1aff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F9F9F9">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="420">

            <Image Source="/Resources/Assets/Images/brand.png"
                   Width="200"
                   Height="80"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

            <Border Background="White" CornerRadius="8" Padding="40,30">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Direction="270" Color="#E0E0E0" Opacity="0.5"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Welcome to GenTech" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#333"/>
                    <TextBlock Text="Sign In to access your dashboard" FontSize="14" Foreground="#888" HorizontalAlignment="Center" Margin="0,5,0,25"/>

                    <TextBlock Text="Username" FontWeight="SemiBold" FontSize="12" Foreground="#444"/>
                    <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="8" Height="45" Margin="0,5,0,15">
                        <TextBox x:Name="TxtUsername"
                                 Style="{StaticResource OutlineTextBox}"
                                 Tag="Enter username"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Height="43"
                                 FontSize="14"/>

                    </Border>

                    <TextBlock Text="Pin" FontWeight="SemiBold" FontSize="12" Foreground="#444"/>
                    <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="8" Height="45" Margin="0,5,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <PasswordBox x:Name="TxtPassword"
                                         Grid.Column="0"
                                         PasswordChanged="TxtPassword_PasswordChanged"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"
                                         FontSize="14"
                                         Padding="12,0,40,0"/>

                            <TextBox x:Name="TxtPasswordVisible"
                                     Grid.Column="0"
                                     Visibility="Collapsed"
                                     TextChanged="TxtPasswordVisible_TextChanged"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     FontSize="14"
                                     Padding="12,0,40,0"/>

                            <TextBlock x:Name="lblPasswordPlaceholder"
                                       Grid.Column="0"
                                       Text="Enter your pin"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       Foreground="#AAA"
                                       Margin="12,0,0,0"/>

                            <Button x:Name="BtnTogglePassword"
                                    Grid.Column="1"
                                    Width="30"
                                    Height="30"
                                    Margin="0,0,8,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnTogglePassword_Click">
                                <Path x:Name="EyeIcon"
                                      Fill="#888"
                                      Width="18"
                                      Height="12"
                                      Stretch="Fill"
                                      Data="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z" />
                            </Button>
                        </Grid>
                    </Border>
                    <Button Content="Sign In" Style="{StaticResource PrimaryButtonStyle}" Margin="0,10,0,0" Click="SignInButton_Click"/>

                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
