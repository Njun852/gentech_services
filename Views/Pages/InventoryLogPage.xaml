<UserControl x:Class="gentech_services.Views.Pages.InventoryLogPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:gentech_services.Views.Pages"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200" Background="White">

    <Grid Margin="32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Border Grid.Row="0"
                Background="#EFEFEF"
                CornerRadius="8"
                Padding="20,16"
                Margin="0,0,0,24">
            <TextBlock Text="Inventory Log"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#1E1E1E"/>
        </Border>

        <!-- Container with Summary, Filters, and Table -->
        <Border Grid.Row="1"
                BorderBrush="Black"
                BorderThickness="1"
                Padding="0"
                ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Summary and Filters Section -->
                <Border Grid.Row="0"
                        BorderThickness="0"
                        Padding="20,16"
                        Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="280"/>
                        </Grid.ColumnDefinitions>

                        <!-- Log Summary Card -->
                        <Border Grid.Column="0"
                                Background="White"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16,12"
                                Width="180">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Box Icon -->
                                <Image Grid.Column="0"
                                       Source="pack://application:,,,/gentech_services;component/Resources/Assets/Icons/Box.png"
                                       Width="24"
                                       Height="24"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding TotalLogEntries}"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               Foreground="#1E1E1E"/>
                                    <TextBlock Text="Total log entries"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="#666"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Filter by Recorded By -->
                        <TextBox Grid.Column="2"
                                 Style="{StaticResource OutlineTextBox}"
                                 Tag="Filter by recorded by"
                                 Text="{Binding RecordedByFilter, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40"/>

                        <!-- Filter by Product Name or ID -->
                        <TextBox Grid.Column="4"
                                 Style="{StaticResource OutlineTextBox}"
                                 Tag="Filter by product name or ID"
                                 Text="{Binding ProductFilter, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40"/>

                        <!-- Date Range Filter -->
                        <Grid Grid.Column="6">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Clear Button -->
                            <Button Grid.Row="0"
                                    Content="Clear"
                                    x:Name="ClearDateRangeButton"
                                    FontSize="10"
                                    Background="Transparent"
                                    Foreground="#666"
                                    BorderThickness="0"
                                    HorizontalAlignment="Right"
                                    Padding="4,2"
                                    Margin="0,0,0,4"
                                    Cursor="Hand"
                                    Click="ClearDateRange_Click"
                                    Visibility="Collapsed">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <TextBlock Text="{TemplateBinding Content}"
                                                               FontSize="{TemplateBinding FontSize}"
                                                               Foreground="{TemplateBinding Foreground}"
                                                               Padding="{TemplateBinding Padding}"
                                                               TextDecorations="Underline"
                                                               Cursor="Hand"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="#333"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Date Pickers -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Start Date -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="From"
                                               FontSize="10"
                                               Foreground="#999"
                                               Margin="0,0,0,4"/>
                                    <DatePicker Style="{StaticResource OutlineDatePicker}"
                                                SelectedDate="{Binding StartDate}"
                                                SelectedDateChanged="DatePicker_SelectedDateChanged"
                                                Height="40"/>
                                </StackPanel>

                                <!-- End Date -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="To"
                                               FontSize="10"
                                               Foreground="#999"
                                               Margin="0,0,0,4"/>
                                    <DatePicker Style="{StaticResource OutlineDatePicker}"
                                                SelectedDate="{Binding EndDate}"
                                                SelectedDateChanged="DatePicker_SelectedDateChanged"
                                                Height="40"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Table Header -->
                <Border Grid.Row="1"
                        Background="White"
                        BorderBrush="Black"
                        BorderThickness="0,0,0,1"
                        Padding="20,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="160"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Log ID" FontWeight="SemiBold" FontSize="13" Foreground="#1E1E1E"/>
                        <TextBlock Grid.Column="1" Text="Product ID" FontWeight="SemiBold" FontSize="13" Foreground="#1E1E1E"/>
                        <TextBlock Grid.Column="2" Text="Product Name" FontWeight="SemiBold" FontSize="13" Foreground="#1E1E1E"/>
                        <TextBlock Grid.Column="3" Text="Amount Change" FontWeight="SemiBold" FontSize="13" Foreground="#1E1E1E"/>
                        <TextBlock Grid.Column="4" Text="Previous QTY" FontWeight="SemiBold" FontSize="13" Foreground="#1E1E1E"/>
                        <TextBlock Grid.Column="5" Text="Updated QTY" FontWeight="SemiBold" FontSize="13" Foreground="#1E1E1E"/>
                        <TextBlock Grid.Column="6" Text="Reason" FontWeight="SemiBold" FontSize="13" Foreground="#1E1E1E"/>
                        <TextBlock Grid.Column="7" Text="Recorded By" FontWeight="SemiBold" FontSize="13" Foreground="#1E1E1E"/>
                        <TextBlock Grid.Column="8" Text="Timestamp" FontWeight="SemiBold" FontSize="13" Foreground="#1E1E1E"/>
                    </Grid>
                </Border>

                <!-- Table Content with ScrollViewer -->
                <ScrollViewer Grid.Row="2"
                              Style="{StaticResource CustomScrollViewer}"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="8">
                    <ItemsControl ItemsSource="{Binding InventoryLogs}" Padding="0" AlternationCount="2">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource AlternatingRow}"
                                        CornerRadius="5"
                                        Padding="20,12"
                                        Margin="4,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="130"/>
                                            <ColumnDefinition Width="110"/>
                                            <ColumnDefinition Width="110"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="110"/>
                                            <ColumnDefinition Width="160"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Log ID -->
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding LogID}"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Foreground="#1E1E1E"/>

                                        <!-- Product ID -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding ProductID}"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Foreground="#1E1E1E"/>

                                        <!-- Product Name -->
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding ProductName}"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Foreground="#1E1E1E"/>

                                        <!-- Amount Change with colored badge -->
                                        <Border Grid.Column="3"
                                                Background="{Binding ChangeColor}"
                                                BorderBrush="{Binding ChangeColor}"
                                                BorderThickness="0.5"
                                                CornerRadius="4"
                                                Padding="12,4"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding AmountChange}"
                                                       FontSize="12"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       TextAlignment="Center"/>
                                        </Border>

                                        <!-- Previous QTY -->
                                        <TextBlock Grid.Column="4"
                                                   Text="{Binding PreviousQty}"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Foreground="#1E1E1E"
                                                   TextAlignment="Center"/>

                                        <!-- Updated QTY -->
                                        <TextBlock Grid.Column="5"
                                                   Text="{Binding UpdatedQty}"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Foreground="#1E1E1E"
                                                   TextAlignment="Center"/>

                                        <!-- Reason -->
                                        <TextBlock Grid.Column="6"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Foreground="#1E1E1E"
                                                   Margin="4,0">
                                            <Run Text="&quot;"/><Run Text="{Binding Reason}"/><Run Text="&quot;"/>
                                        </TextBlock>

                                        <!-- Recorded By -->
                                        <TextBlock Grid.Column="7"
                                                   Text="{Binding RecordedBy}"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Foreground="#1E1E1E"
                                                   TextAlignment="Center"/>

                                        <!-- Timestamp -->
                                        <TextBlock Grid.Column="8"
                                                   Text="{Binding Timestamp, StringFormat='M/d/yyyy, h:mm:ss tt'}"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Foreground="#1E1E1E"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
